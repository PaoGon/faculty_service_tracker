<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_home_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/img_home_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24"
        tools:ignore="RedundantDescriptionCheck" />

    <ImageView
        android:id="@+id/img_notif_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/img_notif_btn"
        app:layout_constraintEnd_toStartOf="@+id/profile_cont"
        app:layout_constraintStart_toEndOf="@+id/img_home_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notif"
        tools:ignore="RedundantDescriptionCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_cont"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/profile_ic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_profile_btn"
            tools:ignore="RedundantDescriptionCheck" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>