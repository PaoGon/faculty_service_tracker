<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_page">



    <TextView
        android:id="@+id/txt_view_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/txt_view_login"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_btn"
        android:text="@string/btn_login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_pass" />

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:contentDescription="@string/ic_back" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="@string/user_email"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_login"
        android:autofillHints=""
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:hint="@string/user_pass"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="415dp"
        android:layout_height="95dp"
        android:layout_marginTop="228dp"
        android:contentDescription="@string/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:srcCompat="@drawable/ic_rectangle"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/wave1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:contentDescription="@string/wave1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:srcCompat="@drawable/ic_wave1"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/wave3"
        android:layout_width="415dp"
        android:layout_height="189dp"
        android:layout_marginTop="57dp"
        android:contentDescription="@string/wave3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:srcCompat="@drawable/ic_wave3" />

    <ImageView
        android:id="@+id/wave2"
        android:layout_width="413dp"
        android:layout_height="91dp"
        android:layout_marginTop="156dp"
        android:contentDescription="@string/wave2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:srcCompat="@drawable/ic_wave2" />


</androidx.constraintlayout.widget.ConstraintLayout>